%h1= t('.listing_task')
= link_to t('.new_task'), new_task_path
%table
  %tr
    %th= t('table.title')
    %th= t('table.text')
  - @tasks.each do |task|
    %tr
      %td= task.title
      %td= task.text
      %td= link_to t('common.show'), task_path(task)
      %td= link_to t('common.edit'), edit_task_path(task)
      %td= link_to t('common.destroy'), task_path(task), method: :delete, data: {confirm: 'Are you sure?' }
