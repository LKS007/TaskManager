%h1= t('.listing_task')
= link_to t('.new_task'), new_task_path
%table
  %tr
    %th= t('tasks.task_fields.table_title')
    %th= t('tasks.task_fields.table_text')
  - @tasks.each do |task|
    %tr
      %td= task.title
      %td= task.text
      %td= link_to t('tasks.link.show'), task_path(task)
      %td= link_to t('tasks.link.edit'), edit_task_path(task)
      %td= link_to t('tasks.link.destroy'), task_path(task), method: :delete, data: {confirm: 'Are you sure?' }
