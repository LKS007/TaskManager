%h1 Listing tasks
= link_to 'New task', new_task_path
%table
  %tr
    %th Title
    %th Text
  - @tasks.each do |task|
    %tr
      %td= task.title
      %td= task.text
      %td= link_to 'Show', task_path(task)
      %td= link_to 'Edit', edit_task_path(task)
      %td= link_to 'Destroy', task_path(task), method: :delete, data: {confirm: 'Are you sure?' }
